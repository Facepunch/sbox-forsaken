@using Sandbox;
@using Sandbox.UI;
@using System;
@using Facepunch.Forsaken;

@namespace Facepunch.Forsaken.UI
@attribute [StyleSheet( "/ui/CursorController.scss" )]
@inherits Panel

@code
{
    public static CursorController Current { get; private set; }

    public CursorController()
    {
        Current = this;
    }

    public void Disable()
    {
        SetClass( "hidden", true );
    }

    public void Enable()
    {
        SetClass( "hidden", false );
    }
}
